[MASTER]
# jobs=0 means 'use all CPUs'
jobs=0
init-hook='import sys; sys.path.append(".")'
extension-pkg-whitelist=pydantic

[MESSAGES CONTROL]
disable =
  missing-docstring,
  line-too-long,
  invalid-name,
  no-value-for-parameter,
  no-member,
  unused-argument,
  broad-except,
  wrong-import-position,
  bare-except,
  locally-disabled,
  protected-access,
  abstract-method,
  fixme,
  too-few-public-methods,
  too-many-ancestors,
  ungrouped-imports,
  inconsistent-return-statements,
  redefined-builtin,
  redefined-outer-name,
  raise-missing-from,
  f-string-without-interpolation,
  too-many-arguments,
  unsubscriptable-object,
  wrong-import-order

[REPORTS]
output-format=colorized

[FORMAT]
logging-modules=
  logging,
  structlog,
